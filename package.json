{
  "name": "its-done",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run dev",
    "dev:all": "turbo run dev --parallel",
    "dev": "./scripts/start-dev.sh",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
  "format": "prettier --write \"**/*.{ts,tsx,md}\"",
  "studio": "cd apps/backend && npx prisma studio",
  "codacy:install": ".codacy/cli.sh install",
  "codacy:analyze": ".codacy/cli.sh analyze",
  "codacy:analyze:eslint": ".codacy/cli.sh analyze --tool eslint",
  "codacy:analyze:trivy": ".codacy/cli.sh analyze --tool trivy",
  "codacy:analyze:sarif": ".codacy/cli.sh analyze --format sarif -o codacy.sarif"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4"
  },
  "packageManager": "pnpm@8.15.4",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.1.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.7",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.513.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.7.0",
    "react-hook-form": "^7.57.0",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.56"
  },
  "pnpm": {
    "overrides": {
  "jest-environment-jsdom": "29.7.0",
  "@jest/environment-jsdom-abstract": "29.7.0",
  "@jest/globals": "29.7.0",
  "jest": "29.7.0"
    }
  }
}
