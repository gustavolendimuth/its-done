# Dockerfile para deploy standalone do frontend
FROM node:18-alpine AS base

# Instalar depend√™ncias do sistema
RUN apk add --no-cache libc6-compat && \
    npm install -g pnpm@8.15.4

# Definir diret√≥rio de trabalho
WORKDIR /app

# Stage 1: Dependencies
FROM base AS deps

# Copiar arquivos de configura√ß√£o do workspace (contexto √© a raiz do projeto)
COPY pnpm-workspace.yaml ./
COPY package.json ./

# Criar estrutura de diret√≥rios
RUN mkdir -p apps/frontend packages

# Copiar arquivos de configura√ß√£o do frontend
COPY apps/frontend/package.json ./apps/frontend/
COPY apps/frontend/components.json ./apps/frontend/
COPY apps/frontend/src ./apps/frontend/src
COPY apps/frontend/public ./apps/frontend/public
COPY apps/frontend/next.config.js ./apps/frontend/
COPY apps/frontend/tailwind.config.ts ./apps/frontend/
COPY apps/frontend/tsconfig.json ./apps/frontend/
COPY apps/frontend/postcss.config.* ./apps/frontend/

# Copiar os pacotes necess√°rios do workspace
COPY packages/types ./packages/types
COPY packages/tsconfig ./packages/tsconfig

# Instalar depend√™ncias
RUN pnpm config set network-timeout 300000 && \
    pnpm install --prod=false

# Stage 2: Build
FROM base AS builder
WORKDIR /app

# Criar estrutura de diret√≥rios
RUN mkdir -p apps/frontend packages

# Copiar node_modules e estrutura do workspace
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/package.json ./package.json
COPY --from=deps /app/pnpm-workspace.yaml ./
COPY --from=deps /app/packages ./packages
COPY --from=deps /app/apps/frontend ./apps/frontend

# Build da aplica√ß√£o (construir types primeiro, depois frontend)
WORKDIR /app
RUN echo "üîß Building types package..." && \
    pnpm --filter @its-done/types build
RUN echo "üî® Building Next.js application..." && \
    pnpm --filter frontend build

# Stage 3: Production
FROM base AS runner
WORKDIR /app

# Criar usu√°rio n√£o-root
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copiar arquivos necess√°rios
COPY --from=builder /app/apps/frontend/next.config.js ./
COPY --from=builder /app/apps/frontend/public ./public

# Copiar aplica√ß√£o buildada
COPY --from=builder --chown=nextjs:nodejs /app/apps/frontend/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/frontend/.next/static ./.next/static

# Mudar para usu√°rio n√£o-root
USER nextjs

# Expor porta
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://127.0.0.1:3000/ || exit 1

# Comando para iniciar
CMD ["node", "server.js"] 