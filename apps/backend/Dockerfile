# Use Node.js 18 Alpine
FROM node:18-alpine

# Instalar dependÃªncias do sistema
RUN apk add --no-cache libc6-compat curl && \
    npm install -g pnpm@8.15.4

# Definir diretÃ³rio de trabalho
WORKDIR /app

# Copiar apenas o que Ã© necessÃ¡rio para install
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/ ./packages/
COPY apps/backend/package.json ./apps/backend/

# Instalar dependÃªncias primeiro
RUN pnpm config set network-timeout 300000 && \
    pnpm install --frozen-lockfile

# Copiar cÃ³digo fonte
COPY apps/backend/ ./apps/backend/

# Navegar para o backend
WORKDIR /app/apps/backend

# Build em etapas
RUN echo "ğŸ”§ Gerando Prisma client..." && \
    pnpm prisma generate

RUN echo "ğŸ”¨ Executando build NestJS..." && \
    pnpm run build

# Debug: Verificar configuraÃ§Ã£o e tentar builds alternativos
RUN echo "ğŸ“‹ Debug info:" && \
    echo "TypeScript version: $(npx tsc --version)" && \
    echo "Nest CLI version: $(npx nest --version)" && \
    echo "ğŸ“ ConteÃºdo do dist apÃ³s primeiro build:" && \
    ls -la dist/ && \
    echo "ğŸ”§ Tentando build direto com tsc..." && \
    npx tsc --project tsconfig.build.json && \
    echo "ğŸ“ ConteÃºdo do dist apÃ³s tsc:" && \
    ls -la dist/ && \
    echo "ğŸ”§ Tentando nest build direto..." && \
    npx nest build --webpack && \
    echo "ğŸ“ ConteÃºdo final do dist:" && \
    ls -la dist/

# Verificar resultado final
RUN echo "ğŸ“¦ Verificando build final:" && \
    find dist -type f -name "*.js" | head -10 && \
    echo "ğŸ“„ Procurando main file:" && \
    ls -la dist/main.* || ls -la dist/ | grep main || echo "Nenhum main file encontrado"

# Criar usuÃ¡rio nÃ£o-root e diretÃ³rios
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nestjs && \
    mkdir -p /app/data/uploads && \
    chown -R nestjs:nodejs /app

# Mudar para usuÃ¡rio nÃ£o-root
USER nestjs

# Expor porta
EXPOSE 3002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://127.0.0.1:3002/health || exit 1

# Comando para iniciar (com debugging)
CMD ["sh", "-c", "echo 'ğŸš€ Iniciando aplicaÃ§Ã£o...' && echo 'ğŸ“ ConteÃºdo do dist:' && ls -la dist/ && echo 'ğŸ“„ Procurando arquivo principal:' && find . -name '*.js' | grep -E '(main|index)' | head -5 && if [ -f dist/main.js ]; then echo 'âœ… Executando dist/main.js' && node dist/main.js; elif [ -f dist/src/main.js ]; then echo 'âœ… Executando dist/src/main.js' && node dist/src/main.js; elif [ -f main.js ]; then echo 'âœ… Executando main.js' && node main.js; else echo 'âŒ Nenhum arquivo principal encontrado' && exit 1; fi"] 